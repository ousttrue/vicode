    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Tests",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "vicode",
            "type": "python",
            "request": "launch",
            "module": "vicode",
            "args": [
                "src/vicode/__main__.py",
                "src/vicode/layout/root.py",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "justMyCode": false,
            "console": "externalTerminal"
        }
    ]
}